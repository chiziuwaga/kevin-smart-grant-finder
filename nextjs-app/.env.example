# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@localhost:5432/smartgrantfinder?schema=public"

# ============================================================================
# AUTH (NextAuth.js v5)
# ============================================================================
AUTH_SECRET="generate-with-openssl-rand-base64-32"
# NEXTAUTH_URL="http://localhost:3000" # Auto-detected in Next.js 14+

# ============================================================================
# AI SERVICES
# ============================================================================

# DeepSeek API (Replaces Perplexity - 95% cost savings)
DEEPSEEK_API_KEY="sk-your-deepseek-key"
DEEPSEEK_BASE_URL="https://api.deepseek.com"

# AgentQL (Web scraping with virtual desktop)
AGENTQL_API_KEY="your-agentql-key"

# OpenAI (For embeddings and analysis)
OPENAI_API_KEY="sk-your-openai-key"

# Pinecone (Vector database)
PINECONE_API_KEY="your-pinecone-key"
PINECONE_INDEX_NAME="grantcluster"

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================

# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ============================================================================
# EMAIL SERVICE
# ============================================================================

# Resend (Transactional emails)
RESEND_API_KEY="re_your-resend-api-key"
RESEND_FROM_EMAIL="Smart Grant Finder <noreply@your domain.com>"

# ============================================================================
# DOCUMENT STORAGE
# ============================================================================

# Cloudflare R2
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="grant-finder-documents"
R2_PUBLIC_URL="https://pub-your-bucket.r2.dev"

# ============================================================================
# OPTIONAL: NOTIFICATIONS
# ============================================================================

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# ============================================================================
# CRON JOBS (Vercel Cron)
# ============================================================================
CRON_SECRET="your-random-cron-secret-for-api-protection"

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# Node environment
NODE_ENV="development"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API URL (FastAPI backend for heavy processing)
NEXT_PUBLIC_API_URL="http://localhost:8000"
FASTAPI_SECRET_KEY="your-fastapi-secret-for-internal-calls"

# Credit system
CREDIT_TIER_1_AMOUNT=10  # $10 = 10 credits
CREDIT_TIER_2_AMOUNT=22  # $20 = 22 credits (11% bonus)
CREDIT_MARKUP_MULTIPLIER=1.5  # Charge users 1.5x actual cost

# Rate limiting
MAX_CRON_JOBS_PER_DAY=2
MAX_DOCUMENT_SIZE_MB=50

