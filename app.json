{
  "name": "Kevin's Smart Grant Finder",
  "description": "A smart grant finder application for telecommunications and women-owned nonprofits",
  "repository": "https://github.com/yourusername/kevin-smart-grant-finder",
  "keywords": ["grants", "streamlit", "python", "AI"],
  "addons": [
    "cron:standard",
    "papertrail:choklad"
  ],
  "env": {
    "PERPLEXITY_API_KEY": {
      "description": "Perplexity API key"
    },
    "PINECONE_API_KEY": {
      "description": "Pinecone API key"
    },
    "PINECONE_ENVIRONMENT": {
      "description": "Pinecone environment",
      "value": "us-west4-gcp"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection URI"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key"
    },
    "AGENTQL_API_KEY": {
      "description": "AgentQL API key"
    },
    "RELEVANCE_THRESHOLD": {
      "description": "Minimum relevance score for grants",
      "value": "85"
    },
    "DEADLINE_THRESHOLD": {
      "description": "Days remaining to deadline threshold",
      "value": "30"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    },
    "worker": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}